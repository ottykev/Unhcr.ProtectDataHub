@page
@using Unhcr.ProtectDataHub.Localization
@using Unhcr.ProtectDataHub.Web.Pages.Persons
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@inject IStringLocalizer<ProtectDataHubResource> L
@model EditModalModel
@{
Layout = null;
}
<form asp-page="/Persons/EditModal">
    <abp-modal>
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Person.FullName" />
            <abp-input asp-for="Person.Email" />
            <abp-input asp-for="Person.PhoneNumber" />
            <abp-select asp-for="Person.Aor" asp-items="ViewBag.AorOptions"></abp-select>
            <abp-select asp-for="Person.LevelofCordination" asp-items="ViewBag.LevelofCordinationOptions"></abp-select>
            <abp-input asp-for="Person.DutyStation" />
            <abp-input asp-for="Person.WorkingfromDutyStation" />
            <abp-select asp-for="Person.Organization_Type" asp-items="ViewBag.Organization_TypeOptions"></abp-select>
            <abp-input asp-for="Person.OrganizationName" />
            <abp-select asp-for="Person.Position" asp-items="ViewBag.PositionOptions"></abp-select>
            <abp-select asp-for="Person.Staff" asp-items="ViewBag.StaffOptions"></abp-select>
            <abp-select asp-for="Person.DoubleHatting" asp-items="ViewBag.DoubleHattingOptions"></abp-select>
            <abp-select asp-for="Person.StaffGrade" asp-items="ViewBag.StaffGradeOptions"></abp-select>
            <abp-select asp-for="Person.ContractType" asp-items="ViewBag.ContractTypeOptions"></abp-select>
            <abp-input asp-for="Person.StartDate" />
            <abp-input asp-for="Person.EndDate" />
            <abp-input asp-for="Person.IsActive" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>